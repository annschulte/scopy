{
  "name": "scopy",
  "version": "2.0.0",
  "description": "Smart Copy Desktop App - AI-powered content copying with context generation",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run electron",
    "dev": "npm run electron",
    "electron": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "electron",
    "clipboard",
    "hotkey",
    "smart-copy",
    "ai-context",
    "productivity"
  ],
  "author": "scopy",
  "license": "MIT",
  "dependencies": {
    "active-win": "^8.0.0",
    "clipboardy": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.scopy.app",
    "productName": "scopy",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "index.html",
      "styles.css",
      "renderer.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    }
  }
}